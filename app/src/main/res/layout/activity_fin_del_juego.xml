<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vertical"
    tools:context="com.example.mc_masterchemistry.UI.fin_del_juego">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/amarillo_celo" />

    <TextView
        android:id="@+id/TV_RegsitroGemas"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:text="@string/sinRegistro"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.317" />

    <EditText
        android:id="@+id/ET_Nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/Nick"
        android:inputType="textPersonName"
        android:textColor="@color/negro"
        android:textColorHint="@color/cardview_dark_background"
        app:layout_constraintStart_toStartOf="@+id/TV_RegsitroGemas"
        app:layout_constraintTop_toBottomOf="@+id/TV_RegsitroGemas" />

    <Button
        android:id="@+id/BT_VolverAJugar"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_redondeado_blanco"
        android:text="@string/volveraJugar"
        android:textColor="@color/negro"
        app:layout_constraintStart_toEndOf="@+id/BT_guardar"
        app:layout_constraintTop_toBottomOf="@+id/ET_Nick" />

    <Button
        android:id="@+id/BT_Salir"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_redondeado_blanco"
        android:text="@string/salir"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toEndOf="@+id/BT_VolverAJugar"
        app:layout_constraintTop_toBottomOf="@+id/ET_Nick" />

    <Button
        android:id="@+id/BT_guardar"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_redondeado_blanco"
        android:text="@string/guardar"
        android:textColor="@color/negro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_Nick" />

</androidx.constraintlayout.widget.ConstraintLayout>
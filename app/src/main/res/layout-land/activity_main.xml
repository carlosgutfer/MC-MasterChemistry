<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/v"
    tools:context=".UI.MainActivity">

    <Button
        android:id="@+id/Bt_jugar"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/button_border"
        android:text="@string/Jugar"
        android:textColor="@color/primary_text_disable_only_material_dark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BT_tutorial"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_border_reglas"
        android:text="@string/Tutorial"
        android:textColor="@color/primary_text_disable_only_material_dark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bt_jugar" />

    <Button
        android:id="@+id/Bt_formulacion"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_border_formulacion"
        android:onClick="onClick"
        android:text="@string/TDCompuestos"
        android:textColor="@color/primary_text_disable_only_material_dark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BT_tutorial" />

    <Button
        android:id="@+id/bt_salir"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_border_salir"
        android:cursorVisible="false"
        android:shadowColor="#070707"
        android:text="@string/Records"
        android:textColor="@android:color/background_dark"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bt_formulacion" />
</androidx.constraintlayout.widget.ConstraintLayout>
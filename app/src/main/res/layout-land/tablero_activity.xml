<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".UI.tablero.Tablero" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/z">

        <TextView
            android:id="@+id/TV_elementosCreados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_border_salir"
            android:ems="10"
            android:padding="5dp"
            android:text="@string/Compuestoscreados"
            android:textColor="@color/primary_text_disable_only_material_dark"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/Btn_elementosCreados"
            android:layout_width="55dp"
            android:layout_height="42dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/atomo"
            android:onClick="onClick"
            android:text="Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/ET_entradaCompuesto">

            <ImageButton
                android:id="@+id/IV_NOERep1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@null"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_add_circle_black_24dp" />

            <ImageButton
                android:id="@+id/IV_finNO"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@null" />

            <ImageButton
                android:id="@+id/IV_NOERep2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@null"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_add_circle_black_24dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.896"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <Button
                android:id="@+id/btn_fusion"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/azul_clip"
                android:text="@string/fusion"
                android:textColor="@color/primary_text_disable_only_material_dark"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_limpiar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/rosa_chincheta"
                android:text="@string/limpiar"
                android:textColor="@color/primary_text_disable_only_material_dark"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_barajar"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="@drawable/zz"
                android:text="@string/barajar"
                android:textColor="@color/primary_text_disable_only_material_dark"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tableLayout4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <ImageButton
                android:id="@+id/IV_fin1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@null" />

            <ImageButton
                android:id="@+id/IV_fin2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@null" />

            <ImageButton
                android:id="@+id/IV_fin3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@null" />

            <ImageButton
                android:id="@+id/IV_fin4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@null" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/carta1NO1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"
                    app:srcCompat="@drawable/button_border_formulacion" />

                <ImageButton
                    android:id="@+id/carta2NO1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    app:srcCompat="@drawable/button_border_formulacion" />

                <ImageButton
                    android:id="@+id/carta3NO1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"
                    app:srcCompat="@drawable/button_border_formulacion" />

                <ImageButton
                    android:id="@+id/carta4NO1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"
                    app:srcCompat="@drawable/button_border_formulacion" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/carta1NO2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"
                    app:srcCompat="@drawable/button_border_formulacion" />

                <ImageButton
                    android:id="@+id/carta2NO2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"
                    app:srcCompat="@drawable/button_border_formulacion" />

                <ImageButton
                    android:id="@+id/carta3NO2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"
                    app:srcCompat="@drawable/button_border_formulacion" />

                <ImageButton
                    android:id="@+id/carta4NO2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"
                    app:srcCompat="@drawable/button_border_formulacion" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn_E1NO1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/btn_E1NO2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"
                    android:text="Button" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="160dp"
                android:layout_height="31dp">

                <ImageButton
                    android:id="@+id/btn_E2NO1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/btn_E2NO2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"

                    android:text="Button" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/IV_gemas"
            android:layout_width="65dp"
            android:layout_height="71dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/gemas"
            android:foregroundGravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.941"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVnombreM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="116dp"
            android:text="@string/nombreMetal"
            android:textColor="@color/primary_text_disable_only_material_dark"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/tableLayout2"
            app:layout_constraintHorizontal_bias="0.831"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Tv_nombreNometal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="164dp"
            android:text="@string/NoMetal"
            android:textColor="@color/primary_text_disable_only_material_dark"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/tableLayout2"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ET_entradaCompuesto"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/compuesto"
            android:inputType="textPersonName"
            android:textColor="@color/primary_text_disable_only_material_dark"
            android:textColorHint="@color/primary_text_disable_only_material_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.745"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.277" />

        <Button
            android:id="@+id/Bt_peroxido"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/amarillo_celo"
            android:text="@string/peroxido"
            android:textColor="@color/primary_text_disable_only_material_dark"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ET_entradaCompuesto"
            app:layout_constraintTop_toBottomOf="@+id/IV_gemas" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
